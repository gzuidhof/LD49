{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "WebWorker",
            "ES2020"
        ],
        "types": [
            "jest",
            "@cloudflare/workers-types",
        ],
        "moduleResolution": "node",
        "alwaysStrict": true,
        "strict": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./node_modules/@cloudflare/workers-types/index.d.ts",
    ],
    "exclude": [
        "node_modules/",
        "dist/"
    ]
}